---
import i18next, { changeLanguage, t } from "i18next";
import { localizePath } from "astro-i18next";
import { getImage } from "@astrojs/image";
import MainLayout from "@web/layouts/MainLayout.astro";
import getChaptersInfo from "@server/actions/GetChaptersInfo";

changeLanguage("en");

const chapters = await getChaptersInfo({ language: i18next.language });
for (const chapter of chapters) {
    const { src } = await getImage({
        src: chapter.cover,
        width: "239",
        height: "339",
        format: "avif"
    });
    chapter.cover = src;
}
---

<MainLayout title="Degaussing Comic">
	<main>
		{
			chapters.map((chapter, i) => (
				<article>
					<a
						href={
							localizePath(`/chapters/${chapter.number}/pages/0`) + "#strip"
						}
					>
						<img src={chapter.cover} alt="wea" />
					</a>
					<h4>{t("chapters.chapter")} {i + 1}</h4>
					<span>{chapter.pagesAmount} {t("chapters.pages")}</span>
				</article>
			))
		}
	</main>
</MainLayout>
<style>
	main {
		display: grid;
		grid-template-columns: auto auto auto;
		justify-content: space-between;

		width: 862px;
		margin: 30px 0;

		background-color: var(--background-color-primary);
		border-radius: var(--border-radius);
		border: var(--border);

		padding: 24px 32px 32px 32px;
	}

	img {
		width: 239px;
		aspect-ratio: var(--strip-aspect-ratio);

		margin-bottom: 20px;

		border-radius: var(--border-radius);
	}

	h4 {
		color: var(--color-title);
		font-family: var(--font-family-title);
		font-size: 24px;

		margin-bottom: 10px;
	}

	span {
		color: var(--color-muted);
		font-family: var(--font-family-text);
		font-size: 14px;
	}

	@media (max-width: 992px) {
		main {
			grid-template-columns: 1fr;
			width: 100%;

			padding: 16px 16px 42px 16px;
			gap: 42px;
		}

		img {
			width: 100%;
		}
	}
</style>
