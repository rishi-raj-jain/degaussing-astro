---
import { join } from "node:path"
import { AstroFont } from "astro-font"

const makeFontPath = (name: string) =>
	join(process.cwd(), "public", "fonts", name)
---

<AstroFont
	config={[
		{
			name: "Germania One",
			src: [
				{
					style: "normal",
					weight: "normal",
					path: makeFontPath("GermaniaOne.woff2")
				}
			],
			preload: false,
			display: "swap",
			fallback: "sans-serif",
			cssVariable: "font-one"
		},
		{
			name: "Inter",
			src: [
				{
					style: "normal",
					weight: "normal",
					path: makeFontPath("Inter.woff2")
				}
			],
			preload: false,
			display: "swap",
			fallback: "sans-serif",
			cssVariable: "font-inter"
		}
	]}
/>
