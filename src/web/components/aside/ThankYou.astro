---
import { t } from "i18next"
import Aside from "@web/components/aside/Aside.astro"
import Title from "@web/components/aside/Title.astro"
import { getContributionLinks } from "@server/actions/GetContributionLinks"

const links = await getContributionLinks()
---

<Aside grid-area="thank-you">
	<div class="container">
		<Title>{t("strip.thank-you")}</Title>
		<div class="buttons">
			{
				links.map((link) => (
					<a href={link.href} target="_blank" rel="noopener">
						<img src={link.icon} alt="" />
						<span>{link.text}</span>
					</a>
				))
			}
		</div>
	</div>
</Aside>
<style>
	.buttons {
		display: grid;
		grid-template-columns: 1fr;
		gap: 20px;
	}

	a {
		display: grid;
		grid-template-columns: 58px 1fr;
		align-items: center;
		padding: 0 16px;

		background-color: #f0be5f;
		border: 1px solid #432918;
		border-radius: 5px;
		height: 62px;

		font-family: var(--font-family-text);
		color: var(--color-text-aside);
		font-size: 14px;

		transition: var(--transition-hover);
	}

	a:hover {
		background-color: var(--color-hover);
	}

	.container {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		flex-grow: 1;
		gap: 8px;
	}

	@media (max-width: 992px) {
		.buttons {
			grid-template-columns: 1fr 1fr;
			gap: 8px;
			padding: 14px;
		}

		a {
			grid-template-columns: 46px 1fr;
		}

		span {
			justify-self: center;
		}
	}
</style>
