---
const area = Astro.props["grid-area"]
const name = Astro.props["aria-label"]
const className = Astro.props["class"]
---
<aside style={`grid-area: ${area};`} aria-label={name} class={className}>
	<slot />
</aside>
<style>
	aside {
		padding: 1.5em;
		border: var(--border-wide);

		border-radius: var(--border-radius);
		background-color: var(--background-color-primary);
	}

	@media (max-width: 60em) {
		aside {
			padding: 1em;
		}
	}
</style>
