---
const area = Astro.props["grid-area"]
const name = Astro.props["aria-label"]
const grow = Astro.props.grow
---
<aside style={`grid-area: ${area}; flex-grow: ${grow ? 1 : 0};`} aria-label={name}>
	<slot />
</aside>
<style>
	.grow {
		flex-grow: 1;
	}

	aside {
		display: flex;

		background-color: var(--background-color-primary);
		border-radius: var(--border-radius);
		border: var(--border);

		padding: 24px;
	}

	@media (max-width: 992px) {
		aside {
			padding: 14px;
		}
	}
</style>
