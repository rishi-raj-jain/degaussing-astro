---
import getMenuItems from "@server/actions/GetMenuItems"
const items = getMenuItems({path: Astro.url.pathname})
---
<nav>
    <ul>
        {items.map(item =>
            <li>
                <a
                    href={item.href}
                    class={item.selected ? "selected" : ""}
                    title={item.desktop === "icon" ? item.text : undefined}
                >
                    {item.desktop === "text" && item.text}
                    {item.desktop === "icon" && <img src={item.icon} alt={item.text}/>}
                </a>
            </li>
        )}
    </ul>
</nav>
<style>
    nav {
        display: flex;
    }

    ul {
        display: flex;
        gap: 36px;
    }

    li {
        display: flex;
        align-items: center;
    }

    a {
        display: flex;
        padding: 8px 12px;
        font-size: 32px;
        font-family: var(--font-family-title);
        color: var(--color-primary);
        border-radius: var(--border-radius);

		transition: var(--transition-hover);
    }

    a > img {
		transition: var(--transition-hover);
    }

    a:hover {
        color: var(--color-hover);
        background-color: var(--background-color-hover);
    }

    a:hover > img {
        filter: saturate(20);
    }

    img {
        width: 29px;
        height: 29px;
    }

    .selected {
        color: var(--color-title);
    }

    @media (max-width: 992px) {
        nav {
            display: none;
        }
    }
</style>