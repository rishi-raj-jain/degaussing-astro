---
//import i18next, { t } from "i18next"
//import { localizePath } from "astro-i18next"
import getMenuItems from "@server/actions/GetMenuItems"
const items = getMenuItems({path: Astro.url.pathname})
const item = items.find(item => item.selected)

//const {info} = Astro.props

//    {info && `${t("strip.chapter")} ${info.current.chapter} | ${page === 0 ? t("strip.cover") : `${t("strip.page")} ${info.current.page}`}`}
---
<h1>
    {item && item.text}
</h1>
<style>
    h1 {
        display: none;
    }

    @media (max-width: 992px) {
        h1 {
            display: flex;
            align-items: center;
            padding: 11px 28px;
            font-size: 32px;
            font-family: var(--font-family-title);
            color: var(--color-title);
        }
    }
</style>