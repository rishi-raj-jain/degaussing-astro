---
import getTitle from "@server/actions/GetTitle"
import type {RelatedPages} from "@server/Utils"
export interface Props { info?: RelatedPages }
const { info } = Astro.props

const title = getTitle({path: Astro.url.pathname, info})
---
<h1>
    {title.join(" | ")}
</h1>
<style>
    h1 {
        display: none;
    }

    @media (max-width: 992px) {
        h1 {
            display: flex;
            align-items: center;
            padding: 11px 28px;
            font-size: 32px;
            font-family: var(--font-family-title);
            color: var(--color-title);
        }
    }
</style>