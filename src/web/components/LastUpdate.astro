---
import getLastUpdate from "@server/actions/GetLastUpdate"
import { Image } from '@astrojs/image/components';

const {image, chapter, page} = await getLastUpdate()
---


<aside class="last-update">
	<span class="title">Last update:</span>
	<span class="important">November 8th</span>
	<span class="normal">Chapter {chapter} | Page {page}</span>
   	<Image src={image} alt="wea" width="161" height="227" format="avif"/>
</aside>
<style>
    .last-update {
        grid-area: last-update;

        display: flex;
        flex-direction: column;
        justify-content: space-between;

        height: 381px;
        padding: 23px;
    }

    .title {
        font-family: 'Germania One', sans-serif;
        font-size: 30px;
    }

    .important {
        font-family: 'Inter';
        font-weight: 600;
        font-size: 16px;
        line-height: 23px;
    }

    .normal {
        font-family: 'Inter';
        font-size: 14px;
        line-height: 23px;
    }

    aside {
        background-color: #D9D9D9;
        border-radius: 5px;
    }
</style>
