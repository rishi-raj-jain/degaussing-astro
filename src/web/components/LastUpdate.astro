---
import i18next from "i18next";
import getLastUpdate from "@server/actions/GetLastUpdate"
import { Image } from '@astrojs/image/components';

const {image, chapter, page} = await getLastUpdate({language: i18next.language})
---


<aside class="last-update">
	<span class="title">Last update:</span>
	<span class="important">November 8th</span>
	<span class="normal">Chapter {chapter} | Page {page}</span>
   	<Image src={image} alt="wea" width="161" height="227" format="avif"/>
</aside>
<style>
    .last-update {
        grid-area: last-update;

        display: flex;
        flex-direction: column;
        justify-content: space-between;

        height: 381px;
        padding: 23px;
    }

    .title {
        font-family: var(--font-family-title);
        font-size: 30px;
        color: var(--color-title);
    }

    .important {
        font-family: var(--font-family-text);
        font-weight: 600;
        font-size: 16px;
        line-height: 23px;
        color: var(--color-text-aside);
    }

    .normal {
        font-family: var(--font-family-text);
        font-size: 14px;
        line-height: 23px;
        color: var(--color-text-aside);
    }

    aside {
        background-color: var(--background-color-aside);
        border-radius: var(--border-radius);
    }
</style>
