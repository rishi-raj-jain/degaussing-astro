---
import Header from '@web/components/Header.astro';
import ResetCss from '@web/styles/ResetCss.astro';
import FontsCss from '@web/styles/FontsCss.astro';
import VariablesCss from '@web/styles/VariablesCss.astro';

export interface Props {
	title: string;
	type: string;
}

const { title, type } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
	    <title>{title}</title>
	    <link rel="icon" href="/favicon.ico"/>
	    <ResetCss/>
	    <FontsCss/>
	    <VariablesCss/>
	</head>
	<body>
    	<Header type={type}/>
    	<div id="wea" class="dynamic-content">
    		<slot/>
		</div>
	</body>
</html>
<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

    .dynamic-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-image: linear-gradient(to bottom, var(--background-color-header), var(--color-primary));
    }
</style>