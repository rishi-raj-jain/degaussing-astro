---
import i18next from "i18next";
import Header from "@web/components/header/Header.astro"
import Title from "@web/components/header/Title.astro"
import ResetCss from "@web/styles/ResetCss.astro"
import FontsCss from "@web/styles/FontsCss.astro"
import VariablesCss from "@web/styles/VariablesCss.astro"
import { HeadHrefLangs } from "astro-i18next/components"
import type {RelatedPages} from "@server/Utils"

export interface Props { info?: RelatedPages }
const { info } = Astro.props
---
<!DOCTYPE html>
<html lang={i18next.language}>
    <head>
        <Title info={info}/>
        <link rel="icon" href="/favicon.ico"/>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <ResetCss/>
        <FontsCss/>
        <VariablesCss/>
        <HeadHrefLangs/>
    </head>
    <body>
        <Header info={info}/>
        <div class="main-background">
            <slot/>
        </div>
    </body>
</html>

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    body:has(#hamburger-menu:target) {
        overflow-y: hidden;
    }

    .main-background {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: var(--background-main);

        padding: 30px 20px;

        flex-grow: 1;
    }

    @media (max-width: 992px) {
        .main-background {
            padding: 16px;
        }
    }
</style>
