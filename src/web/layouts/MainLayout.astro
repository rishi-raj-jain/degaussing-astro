---
import Header from '@web/components/Header.astro';
import ResetCss from '@web/styles/ResetCss.astro';
import FontsCss from '@web/styles/FontsCss.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
	    <title>{title}</title>
	    <link rel="icon" href="/favicon.ico"/>
	    <ResetCss/>
	    <FontsCss/>
	</head>
	<body>
    	<Header/>
    	<div id="wea" class="dynamic-content">
    		<slot/>
		</div>
	</body>
</html>
<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }

    .dynamic-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-image: linear-gradient(to bottom, #1D1D1B, #E5E5E5);
    }
</style>